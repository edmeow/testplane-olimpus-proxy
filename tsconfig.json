{
  "compilerOptions": {
    "types": [
            "testplane"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}